@using WebDrawer.Models;

@{
    ViewData["Title"] = "Home Page";
    List<PokemonModel> pokemonModel = ViewBag.PokemonObjectModel;
}

@*<head>
    <link rel="stylesheet" href="~/css/home.css" />
</head>*@

<div class="container shadow-lg p-3 mb-5 bg-white rounded" style="margin-top: -20px">
    <div class="row">
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 1</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 2</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 3</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 4</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 5</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 6</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 7</button></div>
        <div class="col"><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" data-whatever="mdo">Gen 8</button></div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Recipient:</label>
                        <input type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>

<div class="container" style="margin-top: 20px">
    <div class="row">

        @foreach (var item in pokemonModel)
        {
            var url = "https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/" + item.id + ".png";
            
            <div class="col">
                <div class="card shadow-lg p-3 mb-5 bg-white rounded" style="width: 18rem; margin-bottom:20px; ">
                    <img class="card-img-top" src=@url alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.name</h5>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

